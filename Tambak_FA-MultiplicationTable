<body>
  <h1>TAMBAK: Multiplication Table</h1>
  <button id="generateButton" onclick="generateMultiplicationTable()">Click to Generate!!</button>
  <div id="tableContainer"></div>

  <script>
    function generateMultiplicationTable() {
      let n = parseInt(prompt("Enter the number of rows (2-10): "));
      while (n < 2 || n > 10) {
        n = parseInt(prompt("Invalid input. Enter number of rows (2-10): "));
      }

      let m = parseInt(prompt("Enter the number of columns (2-10): "));
      while (m < 2 || m > 10) {
        m = parseInt(prompt("Invalid input. Enter number of columns (2-10): "));
      }

      let tableContent = "<table>";
      for (let i = 1; i <= n; i++) {
        tableContent += "<tr>";
        for (let j = 1; j <= m; j++) 
        {
          tableContent += "<td class='col-" + j + "'>" + (i * j) + "</td>";
        }
        tableContent += "</tr>";
      }
      tableContent += "</table>";

      document.getElementById("tableContainer").innerHTML = tableContent;
    }
  </script>
</body>
